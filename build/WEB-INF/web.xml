<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Credit</display-name>

    <servlet>
        <servlet-name>FormCreditServlet</servlet-name>
        <servlet-class>controller.FormCreditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FormCreditServlet</servlet-name>
        <url-pattern>/form-credit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreditServlet</servlet-name>
        <servlet-class>controller.CreditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreditServlet</servlet-name>
        <url-pattern>/ajout-credit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FormDepenseServlet</servlet-name>
        <servlet-class>controller.FormDepenseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FormDepenseServlet</servlet-name>
        <url-pattern>/form-depense</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DepenseServlet</servlet-name>
        <servlet-class>controller.DepenseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepenseServlet</servlet-name>
        <url-pattern>/ajout-depense</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DepenseServlet</servlet-name>
        <servlet-class>controller.DepenseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepenseServlet</servlet-name>
        <url-pattern>/list-depense</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FormDepenseServlet</servlet-name>
        <servlet-class>controller.FormDepenseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FormDepenseServlet</servlet-name>
        <url-pattern>/fiche-depense</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DepenseServlet</servlet-name>
        <servlet-class>controller.DepenseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepenseServlet</servlet-name>
        <url-pattern>/modifier-depense</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DepenseServlet</servlet-name>
        <servlet-class>controller.DepenseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepenseServlet</servlet-name>
        <url-pattern>/supprimer-depense</url-pattern>
    </servlet-mapping>    

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>    
</web-app>
